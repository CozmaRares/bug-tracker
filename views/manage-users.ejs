<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <link rel="stylesheet" href="/styles/manage-users.css" />
    <link rel="stylesheet" href="/styles/utils/select.css" />
    <script src="/scripts/select.js"></script>
  </head>
  <body>
    <%- include("partials/dashboard-layout-start", { username, role, USER_ROLE,
    dataAttribute:"manage-users" }) %>
    <h1 class="title">Registered Users</h1>
    <ul class="users">
      <% users.forEach((user, idx) => { %>
      <li>
        <div class="user-info">
          <div>
            <h4><%= user.name %></h4>
            <p class="email"><%= user.email %></p>
          </div>
          <div class="select">
            <p>
              <span id="role-<%= idx %>"><%= user.role %></span>
              <i class="fa-sharp fa-solid fa-caret-down"></i>
            </p>
            <div class="options">
              <% Object.entries(SELECT_ROLES).forEach(([_,value])=> { %>
              <p
                onmousedown="updateRole('<%=user.name%>','<%= value %>','<%= idx %>')"
              >
                <%= value %>
              </p>
              <% }) %>
            </div>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>
    <%-include("partials/dashboard-layout-end") %>
  </body>
  <script>
    setupSelect();

    function updateRole(userName, role, roleIdx) {
      fetch("/update-user-role", {
        method: "POST",
        body: JSON.stringify({ userName, role }),
        headers: {
          "Content-Type": "application/json"
        }
      })
        .then(res => {
          if (!res.ok) throw new Error("HTTP error " + res.status);
        })
        .catch(err => console.log(err));
    }
  </script>
</html>
